<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page"

    android:background="#f6eab9">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcac87">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Note"
            android:textColor="#000"
            android:textSize="24dp"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <EditText
        android:id="@+id/titlepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styling"
        android:gravity="center"
        android:padding="1dp"
        android:text="Title"
        android:textSize="28dp"
        android:textColor="#e10505"
        android:textStyle="bold"
        />

            <EditText
                android:id="@+id/decrippage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/styling2"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Description"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="67dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_black_24dp" />

    <ImageButton
        android:id="@+id/sharepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/delete"
        android:layout_marginStart="62dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_share_black_24dp" />

    <ImageButton
        android:id="@+id/editpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/delete"
        android:layout_marginStart="127dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit_black_24dp" />

    <ImageButton
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/delete"
        android:layout_marginEnd="121dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_content_copy_black_24dp" />



</RelativeLayout>